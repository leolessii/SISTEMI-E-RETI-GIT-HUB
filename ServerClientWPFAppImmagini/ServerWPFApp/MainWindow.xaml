<Window x:Class="ServerWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="TCP-SERVER" HorizontalAlignment="Left" Height="63" Margin="36,25,0,0" VerticalAlignment="Top" Width="319" FontSize="36"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Height="63" Margin="548,25,0,0" VerticalAlignment="Top" Width="208" BorderBrush="#FF00357D" Background="#FF2CDDFF" FontSize="22" Click="btnStart_Click"/>
        <TextBox x:Name="txtIp" HorizontalAlignment="Left" Height="30" Margin="36,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" BorderBrush="Black"/>
        <Button x:Name="btnCambiaIp" Content="Cambia Ip" HorizontalAlignment="Left" Height="44" Margin="36,158,0,0" VerticalAlignment="Top" Width="160" BorderBrush="#FF00FF33" BorderThickness="2,2,2,2" Background="#FF56C340" Click="btnCambiaIp_Click"/>
        <Image x:Name="imgSent" HorizontalAlignment="Left" Height="233" Margin="244,114,0,0" VerticalAlignment="Top" Width="227"/>
        <Image x:Name="imgReceived" HorizontalAlignment="Left" Height="233" Margin="509,114,0,0" VerticalAlignment="Top" Width="227"/>
        <Button x:Name="btnScegliImmagine" Content="Scegli Immagine" HorizontalAlignment="Left" Height="59" Margin="36,270,0,0" VerticalAlignment="Top" Width="160" FontSize="18" Background="#FF4E80E2" BorderThickness="2,2,2,2" BorderBrush="#FF0056FF" Click="btnScegliImmagine_Click"/>
        <Button x:Name="btnInviaImmagine" Content="Invia Immagine" HorizontalAlignment="Left" Height="59" Margin="376,365,0,0" VerticalAlignment="Top" Width="226" Background="#FFE27979" BorderBrush="Red" BorderThickness="2,2,2,2" FontSize="18" Click="btnInviaImmagine_Click"/>

    </Grid>
</Window>
